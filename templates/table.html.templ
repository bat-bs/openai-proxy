  <a onclick="setURL('filter', 'this-year');">
    <button id="btn-this-year" class="bg-blue-300 hover:bg-blue-400 text-gray-800 font-bold py-1 px-3 ">
        This Year
    </button>
  </a>
  <a onclick="setURL('filter', 'last-year');">

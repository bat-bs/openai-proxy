# Copy this file to `local-dev/app.env` and edit secrets before starting.
# The docker-compose file will load this automatically.

# Database connection (some options are redundant; the app will build a connection string)
POSTGRES_USER=openai
POSTGRES_PASSWORD=openai_pass
POSTGRES_DB=openai_proxy

# OIDC / Auth (set to your provider when testing auth flows)
ISSUER=https://sso.redoak.blue-atlas.cloud
CLIENT_ID=
CLIENT_SECRET=
OAUTH_REDIRECT_DOMAIN=http://localhost:8082

# Azure / Proxy
AZURE_API_KEY=
DEPLOYMENT_NAME=robads-ai-schweden
RESSOURCE_NAME=gpt-4.1-mini
BASE_URL=openai.azure.com
DEFAULT_BACKEND=azure

# Optional: override the generated DATABASE_PATH
# DATABASE_PATH=postgresql://openai:openai_pass@db/openai_proxy

